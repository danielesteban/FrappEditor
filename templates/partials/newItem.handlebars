<div class="modal fade" id="newItem" tabindex="-1" role="dialog" aria-labelledby="newItemLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="newItemLabel"></h4>
			</div>
			<form>
				<div class="modal-body">
					<div class="form-group">
						<label for="newItemName">{{L 'name'}}:</label>
						<input id="newItemName" class="form-control" name="name">
					</div>
				</div>
				<div class="modal-footer">
					<input type="hidden" name="type">
					<input type="hidden" name="path">
					<input type="hidden" name="oldName">
					<button class="btn btn-primary">{{L 'save'}}</button>
				</div>
			</form>
		</div>
	</div>
</div>
